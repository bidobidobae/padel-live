<div class="min-h-screen bg-zinc-900 text-zinc-100 p-6">

  <div class="text-4xl font-black mb-6 text-emerald-400 tracking-widest">
    MATCH HISTORY
  </div>

  <%= turbo_stream_from "match_history" %>

  <!-- HEADER -->
  <div class="grid grid-cols-6 gap-2 text-zinc-400 uppercase border-b border-zinc-700 pb-3 mb-4 text-lg font-bold">
    <div>Court</div>
    <div>Side A</div>
    <div>Side B</div>
    <div>Score</div>
    <div>Winner</div>
    <div>Time</div>
  </div>

  <!-- LIST -->
  <div id="history_list">
    <%= render @matches %>
  </div>

</div>

